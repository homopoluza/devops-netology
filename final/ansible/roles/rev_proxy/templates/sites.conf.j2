server {    
    listen 80;
    listen [::]:80;
    server_name _;
    return 301 https://$host$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name "{{  item.fqdn  }}";
          ssl_certificate /etc/letsencrypt/live/www.{{ domain_name }}/fullchain.pem;
          ssl_certificate_key /etc/letsencrypt/live/www.{{ domain_name }}/privkey.pem;

	location / {
		proxy_pass http://{{ item.ip_add }}:{{item.port}}/;
		proxy_buffering off;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header Host "{{  item.fqdn  }}";
       	proxy_set_header X-Forwarded-For $remote_addr;
       	proxy_set_header X-Forwarded-Proto $scheme;
	}
}